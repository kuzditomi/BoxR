@using BoxR.Web.Managers
@model BoxR.Web.Models.LoginModel

@{
    ViewBag.Title = "Bejelentkezés";
}

<section id="loginForm">
    <table>
        <tr>
            <td>
                <div class="logincred">
                    <h1>BoxR</h1>
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        @Html.AntiForgeryToken()
                        <table>
                            <tr>
                                <td>@Html.LabelFor(m => m.UserName)</td>
                                <td> @Html.TextBoxFor(m => m.UserName, new {@class = "username"})</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => m.Password)</td>
                                <td>@Html.PasswordFor(m => m.Password, new {@class = "password"})</td>
                            </tr>
                        </table>
                        <div>
                            @Html.ValidationSummary(true)
                        </div>
                    }
                    <table id="loginbuttons">
                        <tr>
                            <td>
                                @Html.ActionLink("Register", "Register", null, new {@class = "btn"})
                            </td>
                            <td>
                                @Html.Action("ExternalLoginsList", new {ReturnUrl = ConfigHelper.WebsiteAddress})
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/login")
    @Scripts.Render("~/bundles/login")
}