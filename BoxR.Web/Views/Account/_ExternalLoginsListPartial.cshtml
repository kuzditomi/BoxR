@model ICollection<AuthenticationClientData>

@if (Model.Count != 0)
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl}))
    {
        @Html.AntiForgeryToken()
        foreach (AuthenticationClientData p in Model)
        {
            <input type="submit" class="@String.Format("btn{0}",p.AuthenticationClient.ProviderName)" value="@p.AuthenticationClient.ProviderName" name="provider" title="Log in using your @p.DisplayName account"/>   
        }
    }
}
